page{
  height: 100%;
  width: 100%
}
.movieInfo{
  display: flex;
  flex-direction: row;
/*  width: 100%;*/
  height: 400rpx;
  border-top: 1px dashed #DC143C;
  border-bottom: 1px dashed #DC143C;
  padding: 10rpx;
  margin-top: 10rpx
}

.poster{
  width: 40%;
  height: 95%;
  vertical-align: middle;
  display: flex;
  align-content: flex-start;
  padding: 10rpx
}

.moviePoster{
  width: 100%;
  height: 100%
}

.info{
  width: 50%;
  height: 95%;
  display: flex;
  flex-direction: column;
  padding: 10rpx
}

.movieBriefTitles{
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 10rpx
}

.movieBriefNums{
  font-size: 14px;
  margin: 10rpx 0;
}

.audienceContainer{
  display: flex;
  flex-direction: row;
  margin: 10rpx 0
}

.stars{
  height: 30rpx;
  width: 30rpx;
  vertical-align: middle
}

.core{
  font-size: 10px;
  color: #FFA500;
  vertical-align: top;
  margin-left: 50rpx
}

.comments{
  font-size: 12px;
  margin-left: 20rpx
}

.quote{
  font-size: 12px;
  font-weight: bold;
  color: #696969;
  margin-top: 25px;
}